{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "include": [
        "src/**/*"
    ]
}

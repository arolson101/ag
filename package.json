{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "depcheck-packages": "ts-node scripts/depcheck-packages.ts",
    "postinstall": "patch-package",
    "lerna-semver-sync": "lerna-semver-sync",
    "lint": "tslint -c tslint.json --fix \"**/*{.ts,.tsx}\"",
    "pretest": "tsc --noemit --skipLibCheck",
    "test": "jest",
    "prettier": "prettier-tslint fix \"**/*{.ts,.tsx}\"",
    "prettier-package-json": "prettier-package-json --write ./package.json packages/*/package.json --key-order name,private,version,description,license,author,maintainers,contributors,homepage,repository,bugs,workspaces,main,build,module,browser,man,preferGlobal,bin,files,directories,scripts,config,jest,optionalDependencies,dependencies,bundleDependencies,bundledDependencies,peerDependencies,devDependencies,keywords,engines,engine-strict,engineStrict,os,cpu,publishConfig",
    "storybook-android": "cd packages/storybook && yarn run android",
    "storybook-electron": "cd packages/storybook && yarn run electron",
    "storybook-ios": "cd packages/storybook && yarn run ios",
    "target-android": "cd packages/target-react-native && concurrently \"yarn:start\" \"yarn:android\"",
    "target-ios": "cd packages/target-react-native && concurrently \"yarn:start\" \"yarn:ios\"",
    "target-electron": "cd packages/target-electron && yarn dev",
    "update-packages": "ncu -u && lerna exec --concurrency 1 -- ncu -u",
    "watch": "tsc --noemit --skipLibCheck --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "@types/depcheck": "^0.6.0",
    "@types/jest": "^24.0.13",
    "@types/webpack-bundle-analyzer": "^2.13.1",
    "babel-core": "^7.0.0-0",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.0",
    "create-file-webpack": "^1.0.2",
    "cross-env": "^5.2.0",
    "depcheck": "^0.8.0",
    "electron-webpack": "^2.6.2",
    "express": "^4.17.1",
    "file-loader": "^3.0.1",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "lerna-semver-sync": "^1.3.1",
    "nodemon": "^1.19.1",
    "npm-check": "^5.9.0",
    "npm-check-updates": "^3.1.10",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^1.17.1",
    "prettier-package-json": "^2.1.0",
    "prettier-tslint": "^0.4.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typeorm": "^0.2.17",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.3.2"
  }
}
